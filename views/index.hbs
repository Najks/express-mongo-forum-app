<div class="container mt-4">
    <h1 class="mb-3">Welcome to the FORUM Home Page!</h1>
    <p class="lead">This site is dedicated to sharing and solving computer problems.</p>
    
    <h2 class="mt-4 mb-3">Recent Questions</h2>
    <div class="card">
        <ul class="list-group list-group-flush">
            {{#each recentQuestions}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span class="font-weight-bold">{{this.title}}</span>
                <div>
                    <small class="text-muted">{{formatDate this.createdAt}}</small>
                    <a href="/questions/detail/{{this._id}}" class="btn btn-sm btn-primary ml-3">
                        <i class="bi bi-eye"></i> View
                    </a>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
